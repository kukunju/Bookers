<div class="flash">
    <%= flash[:notice] %>
</div>

<h1 class="index_h1"> Books </h1>
<table>
 <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
   </tr>
 </thead>

  <tbody>
   <% @books.each do |book| %>
    <tr>
      <td class="index_title"><%= book.title %></td>
      <td class="index_body"><%= book.body %></td>
      <td class="index_link"><%=link_to "Show", book_path(book.id) %></td>
      <td class="index_link"><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td class="index_link"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
   <% end %>
  </tbody>
</table>

<h1 class="index_h1">New book</h1>

<% if @book.errors.any? %>
<div class="errors_box">
  <div class="errors_title"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <ul class="errors_body">
    <% @book.errors.full_messages.each do |message| %>
      <li ><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="input_form">
<%= form_with model: @book, url:'/books', method: :post  do |f| %>

 <div class="field">
  <label for="input_title">Title</label>
  <%= f.text_field :title %>
 </div>

 <div class="field">
  <label class="input_body" for="book_body">Body</label>
  <%= f.text_area :body %>
 </div>

  <%= f.submit 'Create Book' %>
<% end %>
</div>