<h1> Books </h1>
<table>
 <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th>空白</th>
   </tr>
 </thead>

  <tbody>
   <% @books.each do |book| %>
    <tr>
      <td class="index_title"><%= book.title %></td>
      <td class="index_body"><%= book.body %></td>
      <td><%= link_to "編集", books_path(book.id) %></td>
      <td>Edit</td>
      <td>Destroy</td>
    </tr>
   <% end %>
  </tbody>
</table>

<h1>New book</h1>
<%= form_with model: @book, url:'/books', method: :post  do |f| %>
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
  <label for="book_body">Body</label>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>