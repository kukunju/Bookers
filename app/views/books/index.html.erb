<div class="flash">
    <%= flash[:notice] %>
</div>

<h1 class="index_h1"> Books </h1>
<table>
 <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
   </tr>
 </thead>

  <tbody>
   <% @books.each do |book| %>
    <tr>
      <td class="index_title"><%= book.title %></td>
      <td class="index_body"><%= book.body %></td>
      <td><%=link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
   <% end %>
  </tbody>
</table>

<h1 class="index_h1">New book</h1>

<div class="input_form">
<%= form_with model: @book, url:'/books', method: :post  do |f| %>
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
  <label class="book_body" for="book_body">Body</label>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
</div>